<script type="text/javascript">
    $(document).ready(function() {
        $("#numdoc").autocomplete({
            source: function(request, response) {
                $.ajax({
                    url: "<?php echo $this->basePath(); ?>/validacion/validardpi",
                    dataType: "json",
                    type: "POST",
                    data: {
                        term: request.term
                    },
                    success: function(data) {
                        response($.map(data, function(item) {
                            return {
                                label: item,
                                value: item
                            };
                        }));
                    }
                    /*error: function(a, b, c) {
                     debugger;
                     }*/
                });

            }
        });
        $("#numdoc").focusout(function() {
            $.ajax({
                url: "<?php echo $this->basePath(); ?>/validacion/seleccionardpi",
                dataType: "json",
                type: "POST",
                data: {
                    term: $("#numdoc").val()
                },
                success: function(data) {
                    $('#id').val(data[0]);
                    $('#tipodoc').val(data[1]);
                    $('#datepicker').val(data[2]);
                    //$('#sexo').val(data[3]);
                    $('#nombres').val(data[4]);
                    $('#apellidos').val(data[5]);

                    var $radios = $('input:radio[name=sexo]');
                    if ($radios.is(':checked') === false) {
                        $radios.filter('[value=' + data[3] + ']').prop('checked', true);
                    }

                },
                error: function() {
                    $('#id').val();
                    $('#tipodoc').val();
                    $('#datepicker').val();
                    //$('#sexo').val(data[3]);
                    $('#nombres').val();
                    $('#apellidos').val();
                }
            });
            if ($("#numdoc").val() !== '') {
                $("#tipodoc").attr("required", "true");
            }
        });
    });

</script>
